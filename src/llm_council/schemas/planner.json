{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PlannerOutput",
  "description": "Output schema for the Planner subagent that creates roadmaps and execution plans",
  "type": "object",
  "required": ["plan_title", "objective", "phases", "success_criteria", "risks", "reasoning"],
  "properties": {
    "plan_title": {
      "type": "string",
      "minLength": 5,
      "description": "Concise title describing the plan"
    },
    "objective": {
      "type": "string",
      "minLength": 20,
      "description": "Clear statement of what this plan aims to achieve"
    },
    "context": {
      "type": "object",
      "properties": {
        "current_state": {
          "type": "string",
          "description": "Description of the current situation"
        },
        "constraints": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Known constraints or limitations"
        },
        "assumptions": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Assumptions made in this plan"
        }
      }
    },
    "phases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["phase_number", "name", "tasks", "deliverables"],
        "properties": {
          "phase_number": {
            "type": "integer",
            "minimum": 1
          },
          "name": {
            "type": "string",
            "description": "Phase name"
          },
          "description": {
            "type": "string",
            "description": "What this phase accomplishes"
          },
          "tasks": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["task_id", "description", "subagent"],
              "properties": {
                "task_id": {
                  "type": "string",
                  "pattern": "^[A-Z]+-[0-9]+$",
                  "description": "Unique task identifier (e.g., PLAN-001)"
                },
                "description": {
                  "type": "string"
                },
                "subagent": {
                  "type": "string",
                  "enum": ["router", "planner", "assessor", "researcher", "architect", "implementer", "reviewer", "test-designer", "shipper", "red-team"],
                  "description": "Which subagent should execute this task"
                },
                "dependencies": {
                  "type": "array",
                  "items": {"type": "string"},
                  "description": "Task IDs this task depends on"
                },
                "priority": {
                  "type": "string",
                  "enum": ["critical", "high", "medium", "low"]
                },
                "complexity": {
                  "type": "string",
                  "enum": ["simple", "normal", "complex"]
                }
              }
            }
          },
          "deliverables": {
            "type": "array",
            "minItems": 1,
            "items": {"type": "string"},
            "description": "What will be produced at the end of this phase"
          },
          "exit_criteria": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Conditions that must be met to complete this phase"
          }
        }
      }
    },
    "dependencies": {
      "type": "object",
      "properties": {
        "external": {
          "type": "array",
          "items": {"type": "string"},
          "description": "External dependencies (APIs, services, teams)"
        },
        "internal": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Internal dependencies (existing code, infrastructure)"
        }
      }
    },
    "success_criteria": {
      "type": "array",
      "minItems": 1,
      "items": {"type": "string"},
      "description": "Measurable criteria for plan success"
    },
    "risks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["risk", "severity", "mitigation"],
        "properties": {
          "risk": {
            "type": "string",
            "description": "Description of the risk"
          },
          "severity": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"]
          },
          "likelihood": {
            "type": "string",
            "enum": ["unlikely", "possible", "likely", "certain"]
          },
          "mitigation": {
            "type": "string",
            "description": "How to prevent or handle this risk"
          }
        }
      }
    },
    "fallback_plan": {
      "type": "string",
      "description": "What to do if the main plan fails"
    },
    "reasoning": {
      "type": "string",
      "minLength": 50,
      "description": "Explanation of planning decisions and tradeoffs"
    }
  },
  "additionalProperties": false
}
